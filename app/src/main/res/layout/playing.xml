<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".PlayingActivity">
    <TextView
            android:text="現在輪到:黑"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.154"
            app:layout_constraintVertical_bias="0.075" android:textSize="20dp"/>

    <com.example.gobang.ChessBoardASync
            android:layout_width="385dp"
            android:layout_height="385dp" app:srcCompat="@drawable/chessboard" android:id="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.43"
            app:layout_constraintHorizontal_bias="0.615"/>
    <Button
            android:text="悔棋"
            android:layout_width="143dp"
            android:layout_height="48dp" android:id="@+id/button4"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:onClick="repent_listener"
            app:layout_constraintHorizontal_bias="0.891" app:layout_constraintVertical_bias="0.023"
            android:textSize="20dp"/>
    <Button
            android:text="提示"
            android:layout_width="143dp"
            android:layout_height="48dp" android:id="@+id/button7"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:onClick="ai_listener"
            app:layout_constraintHorizontal_bias="0.891" app:layout_constraintVertical_bias="0.108"
            android:textSize="20dp"/>
    <Button
            android:text="回主畫面"
            android:layout_width="149dp"
            android:layout_height="50dp" android:id="@+id/button2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:onClick="back_to_home_listener"
            app:layout_constraintHorizontal_bias="0.889" app:layout_constraintVertical_bias="0.917"
            android:textSize="20dp"/>
    <Button
            android:text="重新開始"
            android:layout_width="157dp"
            android:layout_height="51dp" android:id="@+id/button3"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:onClick="restart_listener"
            app:layout_constraintHorizontal_bias="0.141" app:layout_constraintVertical_bias="0.917"
            android:textSize="20dp"/>
    <TextView
            android:text=""
            android:textColor="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.518"
            app:layout_constraintVertical_bias="0.815" android:textSize="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>